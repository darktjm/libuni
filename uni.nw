      clen = uni_cp_to_xml_name(seq, (int)(sp - seq), &has_more, &aliases, &buf, 0, &buf_len);
      printf(" %d %.*s\n", has_more, clen, buf);
      while(aliases) {
        clen = uni_cp_to_xml_name(seq, (int)(sp - seq), &has_more, &aliases, &buf, 0, &buf_len);
        uint32_t *sp2 = seq;
	printf("%04X", (int)*sp2++);
	while(sp2 < sp)
	  printf(":%04X", (int)*sp2++);
        printf(" %d &%.*s\n", has_more, clen, buf);
	nalen = *--p;
	if(!p[-1])
	  p--;
	seqlen = (nalen >> 6) + 1;
	nalen = (nalen & 0x3f) + 1;
	p -= nalen + seqlen * 2;
      }
    }
  }
  return 0;
}
