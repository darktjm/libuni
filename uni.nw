<<[[uni_is_FCD]](@sz)>>=
<<[[uni_is_FCD]][[<<@sz>>]] proto>>
{
  uint8_t prev = 0, curs;

  while(len) {
    unsigned int clen;
    uint32_t cp = uni_int_utf<<@sz>>_decode(str, &clen);
    if(len < 0 && !cp)
      break;
    uint16_t both = uni_FCD_of(cp);
    curs = both >> 8;
    if(curs && curs < prev)
      return 0;
    prev = both & 0xff;
    len -= clen; /* underflow if clen incorrect, but I don't care */
    str += clen;
  }
  return 1;
}
