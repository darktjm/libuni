      break;
    case UNI_WB_NU:
      switch(nwb) {
        case UNI_WB_NU: /* WB8 */
	case UNI_WB_LE: /* WB10 */
#if UNI_UCD_VER >= 630
	case UNI_WB_HL:
#endif
	  return -(nwb + 2);
	case UNI_WB_MN: /* WB11/WB12 */
	case UNI_WB_MB:
#if UNI_UCD_VER >= 630
	case UNI_WB_SQ:
#endif
	  return -1;
	case UNI_WB_EX: /* WB13a */
	  return -(nwb + 2);
	default:
	  break;
