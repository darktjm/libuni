       eccc == FCD_prop->rng_dat16[m].datl)
      continue;
    if(FCD_prop->rng_dat16[m].low == FCD_prop->rng_dat16[m].high) {
      FCD_prop->rng_dat16[m].dath = sccc;
      FCD_prop->rng_dat16[m].datl = eccc;
