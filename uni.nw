  memcpy(uf->readahead, uf->readahead + uf->raptr, uf->ralen - uf->raptr);
  uf->ralen -= uf->raptr;
  uf->raptr = 0;
  uf->ralen += fread(uf->readahead + uf->ralen, 1, UNIF_BUF_LEN - uf->ralen, uf->f);
}
if(uf->raptr == uf->ralen)
  return -1;
