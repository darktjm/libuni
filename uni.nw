    c &= 0x1f;
    ec = *s++;
    if((ec & 0xc0) != 0x80) {
      if(nread)
        *nread = 1;
      return -1;
    }
    if(nread)
      *nread = 2;
    c = (c << 6) + (ec & 0x3f);
    if(c < 0x80)
      return -1;
    return c;
