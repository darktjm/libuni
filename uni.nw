      break;
    case UNI_WB_KA:
      if(nwb == UNI_WB_KA || /* WB13 */
         nwb == UNI_WB_EX) /* WB13a */
        return -(nwb + 2);
       break;
    case UNI_WB_HI:
      if(nwb == UNI_WB_HI) /* WB13d; ja only */
        return -(nwb + 2);
      break;
    case UNI_WB_ID:
      if(nwb == UNI_WB_ID) /* WB13e; ja only */
        return -(nwb + 2);
      break;
    case UNI_WB_EX:
      if(nwb == UNI_WB_EX || /* WB13a */
         nwb == UNI_WB_LE || nwb == UNI_WB_NU || nwb == UNI_WB_KA ||
