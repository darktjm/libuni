		        (a->off & 0xff),
                *bstr = (const uint8_t *)(b_na->strs +
                                          b_na->str_arr[b->off >> 8].off) +
		        (b->off & 0xff);
  unsigned int len = a->len > b->len ? b->len : a->len;
  int c = memcmp(astr, bstr, len);
