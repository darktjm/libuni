#include "uni_prop.h"

int uni_gc_brk(uint32_t prev, uint32_t next, int prevret, int legacy)
{
  uni_GCB_t pgcb = !prevret ? uni_GCB_of(prev) : prevret < 0 ? -prevret - 1 :
                                                               prevret - 1,
            ngcb = uni_GCB_of(next);
  switch(pgcb) {
    case UNI_GCB_CR:
      if(ngcb == UNI_GCB_LF) /* GB3 */
        return -(ngcb + 1);
      /* fall through */
    case UNI_GCB_LF:
    case UNI_GCB_CN:
      return ngcb + 1; /* GB4 */
    case UNI_GCB_L:
      if(ngcb == UNI_GCB_L || ngcb == UNI_GCB_V || ngcb == UNI_GCB_LV ||
         ngcb == UNI_GCB_LVT) /* GB6 */
	return -(ngcb + 1);
      break;
    case UNI_GCB_LV:
    case UNI_GCB_V:
      if(ngcb == UNI_GCB_V || ngcb == UNI_GCB_T) /* GB7 */
        return -(ngcb + 1);
      break;
    case UNI_GCB_T:
    case UNI_GCB_LVT:
      if(ngcb == UNI_GCB_T) /* GB8 */
        return -(ngcb + 1);
      break;
    case UNI_GCB_RI:
      if(ngcb == UNI_GCB_RI)
        return -(ngcb + 1);
      break;
    case UNI_GCB_PP:
      if(!legacy)
        return -(ngcb + 1); /* GB9b */
      break;
    default:
      break;
  }
  if(ngcb == UNI_GCB_CR || ngcb == UNI_GCB_LF || ngcb == UNI_GCB_CN)
    return ngcb + 1; /* GB5 */
  if(ngcb == UNI_GCB_EX || /* GB9 */
     (ngcb == UNI_GCB_SM && !legacy)) /* GB9b */
    return -(ngcb + 1);
  return ngcb + 1; /* GB10 */
}
