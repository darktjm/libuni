	/* but I doubt a Lithuanian will ever complain */
	next_cp == 0x0328 || /* COMBINING OGONEK */
	next_cp == 0x1DCE) /* COMBINING OGONEK ABOVE */
  cond |= UNI_SC_FL_MORE_ABOVE;
@

