  uint32_t cp;
  if(!<<@ab>>len)
    cp = UNI_UCA_LOOKUP_END;
  else if(ret<<@ab>> == UNI_UCA_LOOKUP_AGAIN)
    cp = 0; /* any old random value */
  else {
    unsigned int clen;
    cp = uni_int_utf<<@sz>>_decode(<<@ab>>, &clen);
    <<@ab>> += clen;
