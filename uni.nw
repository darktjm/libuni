  int do_literal = opts && opts->do_literal;
  int lev = opts && opts->max_level ? opts->max_level : 3;
  uni_uca_lookup_state_t *sta = NULL, *stb = NULL;
  int has_l4 = lev > 3;

  if(lev > 4) {
