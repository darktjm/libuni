uint8_t *ra = (uint8_t *)uf->readahead + uf->raptr;
if(uf->enctype == 32) {
  cp = uni_utf32_decode((uint32_t *)ra, uf->bige);
  l = 4;
} else if(uf->enctype == 16) {
  cp = uni_utf16_decode((uint16_t *)ra, (uf->ralen - uf->raptr) / 2, &l, uf->bige);
