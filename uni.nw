    if(uf->did_ic_eof)
      return -1;
    uf->did_ic_eof = 1;
    if(!uf->ralen)
      uf->ralen = uf->raptr = 1; /* avoid reading again */
    if(iconv(uf->ic, NULL, NULL, &obuf, &olen) < 0)
      return -2;
  } else {
    char *ibuf = uf->readahead + uf->raptr;
    size_t ilen = uf->ralen - uf->raptr;
    if(iconv(uf->ic, &ibuf, &ilen, &obuf, &olen) < 0 &&
       ibuf == uf->readahead + uf->raptr) {
      uf->raptr++;
      return -2;
