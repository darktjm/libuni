<<cp_to_name.c>>=
const uni_str_arr_t *uni_na_rng_of(uint32_t cp)
{
  int l = 0, h = uni_na_rng_arr_len / 2 - 1, m;
  while(l <= h) {
    m = (l + h) / 2;
    if(uni_na_rng_arr[m * 2].cp > cp)
      h = m - 1;
    else if(uni_na_rng_arr[m * 2 + 1].cp < cp)
      l = m + 1;
    else
      return &uni_na_rng_arr[m * 2];
  }
  return NULL;
}
