void uni_x_dec(uint32_t cp, const uint32_t *tab, int32_t *off, uint16_t *len,
               uint8_t *compat, int h)
{
  const uint8_t *mr;
  uni_multi_tab_lookup(tab, cp * 4, &mr, 0);
  if(!mr) {
    *off = 0;
    *len = 0;
    if(compat)
      *compat = 0;
    return;
  } else {
    uni_str_ptr_t *v = (void *)mr;
    if(h >= 0 && !v->len && v->off) {
      *off = -1;
      *len = h && (cp - 0xAC00) % 28 ? 3 : 2;
      if(compat)
        *compat = 0;
    } else {
      *off = v->off & 0x7ffff;
      *len = v->len;
      if(compat)
        *compat = v->off >> 19;
    }
  }
}
