      if(nwb == UNI_WB_DQ)
        return 1; /* WB7b/c */
      else if(nwb == UNI_WB_SQ)
        return -(UNI_WB_SQ2 + 2); /* WB7a */
      /* fall through */
#endif
    case UNI_WB_LE:
      switch(nwb) {
        case UNI_WB_LE: /* WB5 */
#if UNI_UCD_VER >= 630
	case UNI_WB_HL:
#endif
	case UNI_WB_NU: /* WB9 */
	  return -(nwb + 2);
	case UNI_WB_ML: /* WB6/WB7 */
	case UNI_WB_MB:
#if UNI_UCD_VER >= 630
	case UNI_WB_SQ:
#endif
	  return 1;
	case UNI_WB_EX: /* WB13a */
	  return -(nwb + 2);
	default:
	  break;
